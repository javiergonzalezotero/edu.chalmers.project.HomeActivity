<?xml version="1.0" encoding="utf-8"?>

	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:padding="10dip">










		<LinearLayout android:layout_width="match_parent"
			android:layout_height="match_parent" android:layout_weight="1"
			android:orientation="vertical">









			<TextView android:id="@+id/textView1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:text="Host Team"
				android:textAppearance="?android:attr/textAppearanceMedium" />





















			<ListView android:id="@+id/listViewHostTeam"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:layout_weight="0.8">

			</ListView>


			<Button android:id="@+id/buttonJoinHost"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="bottom"
				android:text="Join" 
				android:onClick="joinHost"/>

		</LinearLayout>








		<LinearLayout android:layout_width="match_parent"
			android:layout_height="match_parent" android:layout_weight="1"
			android:orientation="vertical">





			<TextView android:id="@+id/textView2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Guest Team"
				android:textAppearance="?android:attr/textAppearanceMedium" />

















			<ListView android:id="@+id/listViewGuestTeam"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:layout_weight="0.2">

			</ListView>


			<Button android:id="@+id/buttonJoinGuest"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="bottom"
				android:text="Join" 
				android:onClick="joinGuest"/>

		</LinearLayout>

	</LinearLayout>
